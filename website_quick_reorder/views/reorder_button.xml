<odoo>
<template id="reorder_button" name="Reorder Button" inherit_id="portal.user_dropdown">
    <xpath expr="//li[last()]" position="after">
        <t t-set="is_connected" t-value="not user_id._is_public()"/>
        <li t-if="is_connected" class="nav-item d-none d-lg-block"><a class="nav-link px-1 px-sm-2" href="/reorder"><i class="fa fa-light fa-rotate-right"></i> <span>Reorder</span></a></li>
    </xpath>
</template>
</odoo>
