<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.sitewide_banner</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="20"/>
            <field name="inherit_id" ref="website.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="cdn_setting" position="after">
                    <div class="col-12 col-lg-6 o_setting_box" id="sitewide_banner_setting">
                        <div class="o_setting_left_pane">
                            <field name="show_sitewide_banner"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="show_sitewide_banner"/>
                            <div class="text-muted">
                                Enable the Sitewide Banner
                            </div>
                            <div class="content-group" attrs="{'invisible': [('show_sitewide_banner', '=', False)]}">
                                <div class="row mt16">
                                    <label class="o_light_label" string="Background Color" for="sitewide_banner_background"/>
                                    <field name="sitewide_banner_background" widget="color"
                                        attrs="{'required': [('show_sitewide_banner', '!=', False)]}"/>
                                </div>
                                <div class="row mt16">
                                    <label class="o_light_label" string="Sitewide Banner Text" for="sitewide_banner_text"/>
                                    <field name="sitewide_banner_text" placeholder="Text here" style="width:100%"
                                        attrs="{'required': [('show_sitewide_banner', '!=', False)]}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>

    </data>
</odoo>
