<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.sitewide_banner</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="20"/>
            <field name="inherit_id" ref="website.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//setting[@id='livechat']" position="after">
                        <setting id="sitewide_banner"                    
                                 title="Enable a Sitewide Banner">
                            <field name="show_sitewide_banner"/>
                            <div class="content-group" invisible="not show_sitewide_banner">
                                <div class="mt16">
                                    <label class="o_light_label" string="Background Color" for="sitewide_banner_background"/>
                                    <field name="sitewide_banner_background" widget="color" />
                                </div>
                                <div class="mt16">
                                    <label class="o_light_label" string="Sitewide Banner Text" for="sitewide_banner_text"/>
                                    <field name="sitewide_banner_text" options="{'codeview': true}" placeholder="Text here" style="width:100%"/>
                                </div>
                            </div>
                        </setting>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
